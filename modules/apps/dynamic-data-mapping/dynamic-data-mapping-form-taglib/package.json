{
	"csfConfig": {
		"path:**/*.js": {
			"js": {
				"lint": {
					"env": {
						"browser": true,
						"jest": true,
						"mocha": true
					},
					"extends": "liferay",
					"globals": {
						"$": true,
						"AlloyEditor": true,
						"CKEDITOR": true,
						"MODULE_PATH": true,
						"main": true
					},
					"parser": "babel-eslint",
					"parserOptions": {
						"ecmaFeatures": {
							"allowImportExportEverywhere": true,
							"experimentalObjectRestSpread": true,
							"jsx": true
						},
						"ecmaVersion": 2017,
						"sourceType": "module"
					},
					"plugins": [
						"./node_modules/eslint-plugin-react"
					],
					"rules": {
						"keyword-spacing": [
							2,
							{
								"overrides": {
									"catch": {
										"after": true
									}
								}
							}
						],
						"newline-after-var": 2,
						"no-console": 0,
						"no-unknown-property": 0,
						"react/jsx-uses-react": 0,
						"react/jsx-uses-vars": 2,
						"require-jsdoc": 0
					}
				}
			}
		},
		"path:**/*.jsp": {
			"js": {
				"lint": {
					"env": {
						"browser": true,
						"jest": true,
						"mocha": true
					},
					"extends": "liferay",
					"globals": {
						"$": true,
						"AlloyEditor": true,
						"CKEDITOR": true,
						"FormBuilderTagLib": true,
						"MODULE_PATH": true,
						"main": true
					}
				}
			}
		}
	},
	"dependencies": {
		"autobind-decorator": "^2.1.0",
		"metal": "^2.16.5",
		"metal-dom": "^2.16.5",
		"metal-jsx": "^2.16.5"
	},
	"devDependencies": {
		"babel-cli": "^6.26.0",
		"babel-core": "^6.26.3",
		"babel-eslint": "^8.2.6",
		"babel-plugin-module-resolver": "^3.1.1",
		"babel-plugin-transform-class-properties": "^6.24.1",
		"babel-plugin-transform-decorators-legacy": "^1.3.5",
		"babel-plugin-transform-object-rest-spread": "^6.26.0",
		"babel-plugin-transform-runtime": "^6.23.0",
		"babel-preset-env": "^1.7.0",
		"babel-preset-metal-jsx": "^0.1.1",
		"check-source-formatting": "^2.0.12",
		"cross-env": "^5.2.0",
		"cross-spawn": "^6.0.5",
		"eslint": "^4.10.0",
		"eslint-config-liferay": "^2.0.8",
		"eslint-plugin-react": "^7.4.0",
		"liferay-npm-bundler": "^2.2.1"
	},
	"name": "dynamic-data-mapping-form-taglib",
	"private": true,
	"scripts": {
		"build": "npm run build-js && npm run bundler",
		"build-js": "babel --source-maps -d classes/META-INF/resources src/main/resources/META-INF/resources",
		"bundler": "liferay-npm-bundler",
		"checkFormat": "npm run csf",
		"csf": "csf src/**/*.es.js src/**/*.jsp test/**/*.es.js --fail-on-errors",
		"format": "npm run csf -- -i"
	},
	"version": "2.0.0"
}
