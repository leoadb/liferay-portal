{namespace Radio}

{template .render}
	{@param name: string}
	{@param? readOnly: bool}
	{@param? tip: string}
	{@param? options: list<[
		label: string,
		value: string
	]>}
	{@param? inline: bool}
	{@param? label: string}
	{@param? predefinedValue: string}
	{@param? repeatable: bool}
	{@param? required: bool}
	{@param? showLabel: bool}
	{@param? spritemap: string}
	{@param? value: ?}

	{call FieldBase.render}
		{param contentRenderer kind="html"}
			{call .content}
				{param disabled: $readOnly /}
				{param inline: $inline /}
				{param name: $name /}
				{param options: $options /}
				{param predefinedValue: $predefinedValue /}
				{param value: $value /}
			{/call}
		{/param}

		{param tip: $tip /}
		{param label: $label /}
		{param repeatable: $repeatable /}
		{param required: $required /}
		{param showLabel: $showLabel /}
		{param spritemap: $spritemap /}
	{/call}
{/template}

{template .content}
	{@param name: string}
	{@param? inline: bool}
	{@param? options: list<[
		label: string,
		value: string
	]>}
	{@param? predefinedValue: string}
	{@param? disabled: bool}
	{@param? value: ?}

	{if $options}
		<div class="ddm-radio">
			{let $radioValue: $predefinedValue ? $predefinedValue : $value /}

			{for $radio in $options}
				{call ClayRadio.render data="$radio"}
					{param checked: $radioValue == $radio.value ? true : false  /}
					{param disabled: $disabled /}
					{param inline: $inline /}
					{param name: $name /}
				{/call}
			{/for}
		</div>
	{/if}
{/template}