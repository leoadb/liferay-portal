{
	"csfConfig": {
		"path:**/*.js": {
			"js": {
				"lint": {
					"env": {
						"browser": true,
						"jest": true
					},
					"extends": "liferay",
					"parser": "babel-eslint",
					"parserOptions": {
						"ecmaVersion": 7
					},
					"rules": {
						"no-unknown-property": [
							2,
							{
								"ignore": [
									"class",
									"xlink:href"
								]
							}
						]
					}
				}
			}
		},
		"path:**/*.jsp": {
			"js": {
				"lint": {
					"env": {
						"browser": true,
						"jest": true,
						"mocha": true
					},
					"extends": "liferay",
					"globals": {
						"$": true,
						"AlloyEditor": true,
						"CKEDITOR": true,
						"LayoutBuilder": true,
						"MODULE_PATH": true,
						"main": true
					}
				}
			}
		}
	},
	"dependencies": {
		"metal": "2.16.8",
		"metal-dom": "2.16.8",
		"metal-jsx": "2.16.8"
	},
	"devDependencies": {
		"babel-cli": "^6.26.0",
		"babel-core": "^6.26.3",
		"babel-eslint": "^8.2.6",
		"babel-plugin-module-resolver": "^3.1.1",
		"babel-plugin-transform-class-properties": "^6.24.1",
		"babel-plugin-transform-decorators-legacy": "^1.3.5",
		"babel-plugin-transform-object-rest-spread": "^6.26.0",
		"babel-plugin-transform-runtime": "^6.23.0",
		"babel-preset-env": "^1.7.0",
		"babel-preset-metal-jsx": "^0.1.1",
		"check-source-formatting": "^2.0.14",
		"eslint": "^4.10.0",
		"eslint-config-liferay": "^3.0.0"
	},
	"name": "data-engine-taglib",
	"private": true,
	"scripts": {
		"build": "babel --source-maps -d classes/META-INF/resources src/main/resources/META-INF/resources && liferay-npm-bundler",
		"checkFormat": "liferay-npm-scripts lint",
		"format": "liferay-npm-scripts format",
		"start": "node watch.js"
	},
	"version": "1.0.0"
}
