{
	"csfConfig": {
		"path:**/*.js": {
			"js": {
				"lint": {
					"env": {
						"browser": true,
						"jest": true,
						"mocha": true
					},
					"extends": "liferay",
					"globals": {
						"Liferay": true,
						"ReportDefinitions": true
					},
					"parser": "babel-eslint",
					"parserOptions": {
						"ecmaFeatures": {
							"allowImportExportEverywhere": true,
							"experimentalObjectRestSpread": true,
							"jsx": true
						},
						"ecmaVersion": 2017,
						"sourceType": "module"
					},
					"plugins": [
						"./node_modules/eslint-plugin-react"
					],
					"rules": {
						"keyword-spacing": [
							2,
							{
								"overrides": {
									"catch": {
										"after": true
									}
								}
							}
						],
						"newline-after-var": 2,
						"no-console": 0,
						"no-unknown-property": 0,
						"react/jsx-uses-react": 0,
						"react/jsx-uses-vars": 2,
						"require-jsdoc": 0
					}
				}
			}
		}
	},
	"dependencies": {
		"autobind-decorator": "^2.1.0",
		"classnames": "^2.2.6",
		"clay-modal": "^2.3.4",
		"isomorphic-fetch": "^2.2.1",
		"metal-events": "^2.16.5",
		"metal-state": "^2.16.5"
	},
	"devDependencies": {
		"babel-cli": "6.26.0",
		"babel-plugin-transform-class-properties": "^6.24.1",
		"babel-plugin-transform-decorators-legacy": "^1.3.5",
		"babel-plugin-transform-object-rest-spread": "^6.26.0",
		"babel-preset-env": "^1.7.0",
		"babel-preset-liferay-project": "1.6.1",
		"babel-preset-metal-jsx": "^0.1.1",
		"check-source-formatting": "^2.0.12",
		"liferay-npm-bundler": "^2.2.1",
		"liferay-npm-bundler-preset-standard": "1.6.1",
		"metal-tools-soy": "^6.0.0",
		"rimraf": "^2.6.2"
	},
	"main": "js/main.es.js",
	"name": "report-definitions-web",
	"private": true,
	"scripts": {
		"build": "npm run build-soy && npm run build-js && npm run bundler && npm run clean",
		"build-js": "babel --source-maps -d classes/META-INF/resources src/main/resources/META-INF/resources",
		"build-soy": "metalsoy --soyDeps \"./node_modules/com.liferay.frontend.taglib.clay/META-INF/resources/node_modules/*/src/*.soy\"",
		"bundler": "liferay-npm-bundler",
		"clean": "rimraf \"src/**/*.soy.js\"",
		"csf": "csf src/**/*.es.js src/**/*.soy --fail-on-errors",
		"format": "npm run csf -- -i"
	},
	"version": "1.0.0"
}
